# m3u-manager environment variables
# Copy to .env and adjust as needed

PORT=3005

# DNS servers used inside the container (space-separated via DNS_SERVER_1/2)
DNS_SERVER_1=1.1.1.1
DNS_SERVER_2=8.8.8.8

# EPG grabber settings
EPG_GRAB_DAYS=3
EPG_GRAB_DELAY=500
EPG_GRAB_TIMEOUT=15000
EPG_GRAB_CONNECTIONS=4

# Cron schedules (standard cron syntax)
EPG_GRAB_CRON=0 4 * * *       # Daily EPG grab at 4am
EPG_SYNC_CRON=0 3 * * 0       # Weekly iptv-org/epg repo sync Sunday 3am

# Your host machine's LAN IP — shown in the Users page so other devices know what to connect to
# Run: ipconfig getifaddr en0
HOST_IP=192.168.1.x

# Optional: GitHub token for higher API rate limits during sync
# GITHUB_TOKEN=ghp_xxxxxxxxxxxx

# ── VPN (OpenVPN) ─────────────────────────────────────────────────────────────
VPN_ENABLED=false
# Supported: CUSTOM, PIA, SURFSHARK, IPVANISH, NORDVPN, VYPRVPN, PROTONVPN
OPENVPN_PROVIDER=CUSTOM
# Specific config file (optional — omit to use first .ovpn found)
OPENVPN_CONFIG=
OPENVPN_PROTOCOL=udp
OPENVPN_USERNAME=
OPENVPN_PASSWORD=
# Set true to force re-download of provider configs on next start
OPENVPN_FORCE_UPDATE=false

# ── DNS / routing ─────────────────────────────────────────────────────────────
# Comma-separated CIDRs to route outside the tunnel
# ⚠️ Required when VPN_ENABLED=true if you want to reach port 3005 from your LAN
LOCAL_NETWORK=192.168.1.0/24

# ── Privoxy ───────────────────────────────────────────────────────────────────
PRIVOXY_ENABLED=false
PRIVOXY_PORT=8118
